{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Build Main",
            "type": "shell",
            "command": "g++",
            "args": [
                "-std=c++23",
                "-fexec-charset=UTF-8",
                "-g",                      
                "-o", 
                "${workspaceFolder}/src/main.exe",
                "${workspaceFolder}/src/main.cc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": ["$gcc"]
        },
        {
            "label": "Build Stress Test",
            "type": "shell",
            "command": "g++",
            "args": [
                "-std=c++23",
                "-fexec-charset=UTF-8",
                "-g",
                "-o", 
                "${workspaceFolder}/test/stress_test.exe",
                "${workspaceFolder}/test/stress_test.cc"
            ],
            "group": "build",
            "problemMatcher": ["$gcc"]
        }
    ]
}
